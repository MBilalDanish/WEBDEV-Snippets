        <script>
        function toggleAnswer(faqNumber) {
            const answer = document.getElementById(`answer${faqNumber}`);
            const faq = document.querySelector(`.faq:nth-child(${faqNumber})`);
            const allFaqs = document.querySelectorAll('.faq');

            if (faq.classList.contains('open')) {
                // Collapse smoothly
                faq.classList.remove('open');
                answer.style.maxHeight = null; // Remove max-height to allow smooth collapse
            } else {
                // Close all other FAQs
                allFaqs.forEach((faqItem) => {
                    if (faqItem !== faq) {
                        faqItem.classList.remove('open');
                        faqItem.querySelector('.faq-answer').style.maxHeight = null; // Remove max-height from other FAQs
                    }
                });

                // Expand smoothly
                faq.classList.add('open');
                answer.style.maxHeight = answer.scrollHeight + 'px'; // Set max-height to the scrollHeight for smooth expansion
            }
        }
    </script>
